<assembly>
    <id>deployment</id>
    <formats>
        <format>tar.gz</format>
        <format>tar.bz2</format>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>LicenseMonitor</outputDirectory>
            <includes>
                <include>README*</include>
                <include>Changelog.md</include>
                <include>LICENSE</include>
                <include>NOTICE.txt</include>
                <include>log4j2.xml</include>
                <include>monitor-EXAMPLE.xml</include>
            </includes>
            <lineEnding>unix</lineEnding>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/lib</directory>
            <outputDirectory>LicenseMonitor/lib</outputDirectory>
            <includes>
                <include>commons-*.jar</include>
                <include>gson-*.jar</include>
                <include>http*.jar</include>
                <include>log4j*.jar</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>LicenseMonitorExtension-${pom.version}.jar</source>
            <outputDirectory>LicenseMonitor</outputDirectory>
            <destName>LicenseMonitorExtension.jar</destName>
        </file>
    </files>
</assembly>